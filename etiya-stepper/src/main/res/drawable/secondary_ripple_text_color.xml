<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:color="@android:color/white" android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/etiya_ripple_button_disable_color" />
            <stroke android:width="0.8dip" android:color="@color/etiya_ripple_button_disable_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:color="@color/etiya_ripple_button_background_color" android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="0.8dip" android:color="@color/etiya_ripple_button_background_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</selector>